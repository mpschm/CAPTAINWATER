  <div class="d-none", id="players-ranking", style="position: relative;">
    <p>Players ranking</p>
    <table class="table table-hover">

      <thead>
        <tr>
          <th scope="col">Ranking</th>
          <th scope="col">Player Name</th>
          <th scope="col">Score</th>
        </tr>
      </thead>

      <tbody>
        <% @plays.each_with_index do |play, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= play.user.email %></td>
            <td><%= play.score %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
