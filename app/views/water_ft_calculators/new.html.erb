
<div class="water_ft_calculators">
  <div class="container">
    <h1 class="title-ft-calculators text-center">Water footprint calculator</h1>
    <div>
      <div class="info-calculator">
        <p>92% of Global Water Consumption in food production.
        <p> This is Virtual Water!</p>
      </div>
      <div class=calculator>

        <%= simple_form_for :calculator, url: water_ft_calculators_path, method: :post do |f| %>

<div id="custom-label">

          <%= f.input :residence, as: :select, collection: ["France", "Belgium", "Italy", "Germany"], label: "Country of residence (> 6 months/year)", selected: "France" %>
          <div class="row" style="padding-left: 15px;">
            <div class="col-xs-6">
              <%= f.input :gender, label: "Gender", as: :select, collection: ["Female", "Male", "Neutral"], selected: "Male" %>
            </div>
            <div class="col-xs-6" style="padding-left: 15px;">
              <%= f.input :income, label: "Annual Income (â‚¬/year)", as: :integer, input_html: {value: '30 000'} %>
            </div>
          </div>
          <%= f.input :dietatary_habit, label: "Dietary Habit", as: :radio_buttons, collection: ['Vegan or vegetarian', 'Average meat consumer', 'High meat consumer'], wrapper: :vertical_collection_inline, :value_method => :first %>
          <%= f.button :submit, class: "button-save-waterft-calculator"%>
        <% end %>

</div>


      </div>
    </div>
  </div>
</div>





